<html lang="en" class="has-aside-left has-aside-mobile-transition has-navbar-fixed-top has-aside-expanded">
  <p style="color: green"><%= notice %></p>
  <%= render partial: 'admin/sidebar' %>
  <%= render partial: 'admin/navbar' %>
  <section class="section is-title-bar">
    <section class="hero is-hero-bar">
      <div class="hero-body">
        <div class="level">
          <div class="level-left">
            <div class="level-item"><h1 class="big-title">Users</h1></div>
          </div>
          <div class="level-right">
            <div class="level-item">
            <div class="buttons is-right">
              <button class="button is-primary" type="button">
              <span class="icon"><i class="mdi mdi-plus-thick"></i></span>
              <%= link_to "New User", new_user_path(@user), class: "has-text-white"  %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="section is-main-section">
      <div class="card has-table">
        <div class="card-content">
          <div class="b-table has-pagination">
            <div class="table-wrapper has-mobile-cards">
              <table class="table is-fullwidth is-striped is-hoverable is-fullwidth">
                <thead class="is-centered">
                  <tr>
                    <th class="is-checkbox-cell">
                      <label class="b-checkbox checkbox">
                        <input type="checkbox" value="false">
                        <span class="check"></span>
                      </label>
                    </th>
                    <th>Avatar</th>
                    <th>E-mail</th>
                    <th>Role</th>
                    <th>Created</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td class="is-checkbox-cell">
                        <label class="b-checkbox checkbox">
                          <input type="checkbox" value="false">
                          <span class="check"></span>
                        </label>
                      </td>
                      <td class="is-image-cell">
                        <div class="image">
                          <%= image_tag(user.avatar.attached? ? user.avatar : 'battlegrounds.svg', class: 'is-rounded') %>
                        </div>
                      </td>
                      <td data-label="E-mail"><%= user.email %></td>
                      <td data-label="E-mail"><%= user.role %></td>
                      <td data-label="Created">
                        <small class="has-text-grey is-abbr-like" title="Oct 25, 2020"><%= Time.zone.now.to_formatted_s(:short) %></small>
                      </td>
                      <td class="is-actions-cell">
                        <div class="buttons is-right">
                          <button class="button is-primary" type="button">
                            <span class="icon"><i class="mdi mdi-eye"></i></span>
                            <%= link_to "Show this user", user_path(user), class:"has-text-white" %>
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="notification">
              <div class="level">
                <div class="level-left">
                  <div class="level-item">
                    <div class="buttons has-addons">
                      <button type="button" class="button is-active">1</button>
                      <button type="button" class="button">2</button>
                      <button type="button" class="button">3</button>
                    </div>
                  </div>
                </div>
                <div class="level-right">
                  <div class="level-item">
                    <small>Page 1 of 3</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>  
  </section>
</html>